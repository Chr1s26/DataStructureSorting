package Sorting;

public class BubbleSort {
	
	public static void main(String[] args) {
		int[] arr = {54,34,2,42,4,21,1};
		arr = sort(arr);
		
		for(int i = 0; i < arr.length; i++) {
			System.out.print(arr[i]+",");
		}
	}
	
	public static int[] sort(int[] arr) {
		
		for(int i = 0; i < arr.length; i++) {
			for(int j = 0; j < arr.length-1-i; j++) {
				if(arr[j+1] < arr[j]) {
					int temp = arr[j];
					arr[j] = arr[j+1];
					arr[j+1] = temp;
				}
			}
		}
		
		return arr;
		
	}
}
